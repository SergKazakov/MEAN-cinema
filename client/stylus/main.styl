@import 'core/*'
@import 'components/*'

a
  color #000

.text-muted
  color #90939a

.navbar
  border 0
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, .26)

.navbar-header
  float left
  padding-left 15px

.navbar-nav
  float left
  margin 0
  & > li
    float left
    & > a
      padding 15px

.navbar-default
  color #fff
  background #fff
  .navbar-brand
    color #333
    background-color #ffe939
