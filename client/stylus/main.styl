  &_admin
    margin-left 2rem

.btn-group-vertical
  .btn
    margin-bottom 10px
  & > .btn
    &:first-child
      &:not(:last-child)
        border-radius 2px
    &:not(:first-child):not(:last-child)
      border-radius 2px
    &:last-child
      &:not(:first-child)
