  margin-left -15px
  transition 0.25s all

.panel
  border-color #cfd9D7
  border-radius 2px
  box-shadow 0 8px 17px rgba(0, 0, 0, .2)

.panel-default
  .panel-heading
    font-size 85%
    font-weight bold
    color #444
    text-transform uppercase
    background-color #f6f6f6
    border-color #cfd9db
    margin 0
    &_border
      border-top 1px solid #cfd9db
      margin 1rem -1rem !important

.form-control
  border-radius 0

.center-form
  width 330px
  margin 12% auto

.signup-or-separator
  position relative
  height 34px
  text-align center
  background none
  hr
    width 90%
    margin -16px auto 10px auto
    border-top 1px solid #dce0e0
  .text
    display inline-block
    padding 8px
    margin 0
    background-color #fff

.has-feedback
