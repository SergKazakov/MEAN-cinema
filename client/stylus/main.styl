    width 5px
    height 5px
    margin-bottom 2px
    background #ebeef1
    border-radius 5px

[class^='ion-']
  font-size 1.2em

.alert-material
  position fixed
  right 12px
  bottom 12px
  z-index 1
  display inline-block
  min-height 48px
  padding 13px 24px 12px
  font-family 'Roboto', sans-serif
  color #f1f1f1
  cursor default
  background #323232
  border-radius 2px
  outline none
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

.profile-picture
  height 100px
  display block
  margin 0 0 1rem

