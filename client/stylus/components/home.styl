.home
  &-gallery
    margin 0 -0.75rem
    &__item
      vertical-align top
      width 25%
      display inline-block
      position relative
      margin 0 0 1.5rem
      padding 0 0.75rem
    &__img
      display block
    &__link
      position absolute
      left 0.75rem
      right 0.75rem
      top 0
      bottom 0
      background rgba(0,0,0,0.6)
      opacity 0
      transition opacity 300ms
      &:hover
        opacity 1
    &__name
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size 16px
      color #fff
      padding 1rem
      border 1px solid
      text-align center

