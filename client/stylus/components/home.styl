.home
  &-gallery
    &__item
      vertical-align top
      width 25%
      display inline-block
      position relative
      &:after
        position absolute
        content ''
        left 0
        bottom 0
        top 0
        right 0
        transition all 300ms
      &:hover
        &:after
          background rgba(0,0,0,0.7)
        .home-gallery__name
          opacity 1
    &__img,
    &__link
      display block
    &__name
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size 16px
      color #fff
      padding 1rem
      border 1px solid
      z-index 1
      opacity 0
      text-align center
      transition all 300ms

