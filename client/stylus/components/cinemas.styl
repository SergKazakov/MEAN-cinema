.cinemas
  &-list
    @extend $cf
    margin 0 -1rem
    &__item
      float left
      width 25%
      padding 1rem
    &__link,
    &__img
      display block
    &__img
      width 100%
    &__name
      text-transform uppercase
      font-weight bold
      margin 2rem 0
    &__address
      margin 2rem 0

