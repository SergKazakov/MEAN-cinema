.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl as vm')
  .navbar-header
    a.navbar-brand(ui-sref='home') Cinema
  ul.nav.navbar-nav.pull-right
    li(ng-if='!vm.isAuthenticated()')
      a(ui-sref='login', ui-sref-active='active') Login
    li(ng-if='!vm.isAuthenticated()')
      a(ui-sref='signup', ui-sref-active='active') Sign up
    li(ng-if='vm.isAuthenticated()')
      a(ui-sref='profile', ui-sref-active='active')
        span.header-avatar__img-wr
          img.header-avatar__img(ng-src="{{currentUser.picture || 'http://placehold.it/25x25'}}")
        | Hi, {{currentUser.displayName}}
    li(ng-if="vm.isAuthenticated() && currentUser.role === 'Admin'")
      a(ui-sref='admin', ui-sref-active='active') Dashboard
    li(ng-if='vm.isAuthenticated()')
      a(href='#', ng-click="vm.logout($event)") Logout
