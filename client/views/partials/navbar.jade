.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl as navbar')
  .navbar-header
    a.navbar-brand(href='/')
      i.ion-ios7-pulse-strong
      |  Satellizer
  ul.nav.navbar-nav
    li(ng-if='navbar.isAuthenticated()')
      a(ui-sref='profile', ui-sref-active='active') Profile
  ul.nav.navbar-nav.pull-right(ng-if='!navbar.isAuthenticated()')
    li
      a(ui-sref='login', ui-sref-active='active') Login
    li
      a(ui-sref='signup', ui-sref-active='active') Sign up
  ul.nav.navbar-nav.pull-right(ng-if='navbar.isAuthenticated()')
    li
      a(href='#', ng-click="navbar.logout($event)") Logout
