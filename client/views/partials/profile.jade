.container
  .panel.panel-default
    .panel-heading Profile
    .panel-body
      legend
        i.ion-clipboard
        |  Edit My Profile
      form(method='post', ng-submit='vm.updateProfile()')
        .form-group
          label.control-label Profile Picture
          img.profile-picture(ng-src="{{vm.user.picture || 'http://placehold.it/100x100'}}")
        .form-group
          label.control-label
            i.ion-person
            |  Display Name
          input.form-control(type='text', ng-model='vm.user.displayName')
        .form-group(ng-if='vm.user.email')
          label.control-label
            i.ion-at
            |  Email Address
          input.form-control(type='email', ng-model='vm.user.email')
        button.btn.btn-lg.btn-success Update Information
  .panel.panel-default
    .panel-heading Accounts
    .panel-body
      legend
        i.ion-link
        |  Linked Accounts
      .btn-group-vertical
        button.btn.btn-sm.btn-danger(ng-if='vm.user.facebook', ng-click="vm.unlink('facebook')")
          i.ion-social-facebook
          |  Unlink Facebook Account
        button.btn.btn-sm.btn-primary(ng-if='!vm.user.facebook', ng-click="vm.link('facebook')")
          i.ion-social-facebook
          |  Link Facebook Account
        button.btn.btn-sm.btn-danger(ng-if='vm.user.google', ng-click="vm.unlink('google')")
          i.ion-social-googleplus
          |  Unlink Google Account
        button.btn.btn-sm.btn-primary(ng-if='!vm.user.google', ng-click="vm.link('google')")
          i.ion-social-googleplus
          |  Link Google Account
        button.btn.btn-sm.btn-danger(ng-if='vm.user.twitter', ng-click="vm.unlink('twitter')")
          i.ion-social-twitter
          |  Unlink Twitter Account
        button.btn.btn-sm.btn-primary(ng-if='!vm.user.twitter', ng-click="vm.link('twitter')")
          i.ion-social-twitter
          |  Link Twitter Account
        button.btn.btn-sm.btn-danger(ng-if='vm.user.github', ng-click="vm.unlink('github')")
          i.ion-social-github
          |  Unlink GitHub Account
        button.btn.btn-sm.btn-primary(ng-if='!vm.user.github', ng-click="vm.link('github')")
          i.ion-social-github
          |  Link GitHub Account

