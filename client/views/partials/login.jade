.container
  .row
    .center-form.panel
      .panel-body
        h2.text-center Log in
        form(method='post', ng-submit='vm.login()', name='loginForm')
          .form-group.has-feedback
            input.form-control.input-lg(type='text', name='email', ng-model='vm.email', placeholder='Email', required, autofocus)
            span.ion-at.form-control-feedback
          .form-group.has-feedback
            input.form-control.input-lg(type='password', name='password', ng-model='vm.password', placeholder='Password', required)
            span.ion-key.form-control-feedback
          button.btn.btn-lg.btn-block.btn-success(type='submit', ng-disabled='loginForm.$invalid') Log in
          p.text-center.text-muted
            small
              | Don't have an account yet?&nbsp;
              a(ui-sref='signup') Sign up
          .signup-or-separator
            h6.text or
            hr
        button.btn.btn-block.btn-facebook(ng-click="vm.authenticate('facebook')") Sign in with Facebook
        button.btn.btn-block.btn-google-plus(ng-click="vm.authenticate('google')") Sign in with Google
        button.btn.btn-block.btn-twitter(ng-click="vm.authenticate('twitter')") Sign in with Twitter
        button.btn.btn-block.btn-github(ng-click="vm.authenticate('github')") Sign in with GitHub
